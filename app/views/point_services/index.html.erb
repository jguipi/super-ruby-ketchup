<h1>Point Services</h1>

<table>
  <thead>
    <tr>
      <th>Nom</th>
      <th>Courriel</th>
      <th>Fax</th>
      <th>Siteweb</th>
      <th>String</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @point_services.each do |point_service| %>
      <tr>
        <td><%= point_service.nom %></td>
        <td><%= point_service.courriel %></td>
        <td><%= point_service.fax %></td>
        <td><%= link_to 'Show', point_service %></td>
        <td><%= link_to 'Edit', edit_point_service_path(point_service) %></td>
        <td><%= link_to 'Destroy', point_service, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

